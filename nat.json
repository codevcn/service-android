{
    "info": {
      "name": "Task Manager API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "Signup",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/auth/signup",
                "host": ["{{base_url}}"],
                "path": ["api", "auth", "signup"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
              }
            }
          },
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/auth/login",
                "host": ["{{base_url}}"],
                "path": ["api", "auth", "login"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n    \"usernameOrEmail\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
              }
            }
          }
        ]
      },
      {
        "name": "Projects",
        "item": [
          {
            "name": "Create Project",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/projects",
                "host": ["{{base_url}}"],
                "path": ["api", "projects"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n    \"projectName\": \"Test Project\",\n    \"description\": \"This is a test project\"\n}"
              }
            }
          },
          {
            "name": "Get User Projects",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/projects",
                "host": ["{{base_url}}"],
                "path": ["api", "projects"]
              }
            }
          }
        ]
      },
      {
        "name": "Phases",
        "item": [
          {
            "name": "Create Phase",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/projects/{{projectId}}/phases",
                "host": ["{{base_url}}"],
                "path": ["api", "projects", "{{projectId}}", "phases"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n    \"phaseName\": \"Planning\",\n    \"description\": \"Planning phase\",\n    \"orderIndex\": 1\n}"
              }
            }
          },
          {
            "name": "Get Project Phases",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/projects/{{projectId}}/phases",
                "host": ["{{base_url}}"],
                "path": ["api", "projects", "{{projectId}}", "phases"]
              }
            }
          },
          {
            "name": "Update Phase",
            "request": {
              "method": "PUT",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/phases/{{phaseId}}",
                "host": ["{{base_url}}"],
                "path": ["api", "phases", "{{phaseId}}"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n    \"phaseName\": \"Updated Phase\",\n    \"description\": \"Updated description\",\n    \"orderIndex\": 2\n}"
              }
            }
          },
          {
            "name": "Delete Phase",
            "request": {
              "method": "DELETE",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/phases/{{phaseId}}",
                "host": ["{{base_url}}"],
                "path": ["api", "phases", "{{phaseId}}"]
              }
            }
          }
        ]
      },
      {
        "name": "Tasks",
        "item": [
          {
            "name": "Create Task",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/phases/{{phaseId}}/tasks",
                "host": ["{{base_url}}"],
                "path": ["api", "phases", "{{phaseId}}", "tasks"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n    \"taskName\": \"New Task\",\n    \"description\": \"Task description\",\n    \"priority\": \"HIGH\",\n    \"status\": \"TODO\",\n    \"dueDate\": \"2024-03-20\",\n    \"allowSelfAssign\": true,\n    \"orderIndex\": 1\n}"
              }
            }
          },
          {
            "name": "Get Phase Tasks",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/phases/{{phaseId}}/tasks",
                "host": ["{{base_url}}"],
                "path": ["api", "phases", "{{phaseId}}", "tasks"]
              }
            }
          }
        ]
      },
      {
        "name": "Comments",
        "item": [
          {
            "name": "Add Comment",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/tasks/{{taskId}}/comments",
                "host": ["{{base_url}}"],
                "path": ["api", "tasks", "{{taskId}}", "comments"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n    \"commentText\": \"This is a test comment\"\n}"
              }
            }
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:8080"
      },
      {
        "key": "token",
        "value": "your_jwt_token_here"
      },
      {
        "key": "projectId",
        "value": "1"
      },
      {
        "key": "phaseId",
        "value": "1"
      },
      {
        "key": "taskId",
        "value": "1"
      }
    ]
  }